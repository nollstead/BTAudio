<body>
  <h1>BTAudio – Custom Web Flasher (DEBUG)</h1>
  <p class="muted">This page only adds error logging around the module import. Your original page stays unchanged.</p>

  <div class="panel">
    <div class="row">
      <button id="connectBtn" disabled>1) Connect</button>
      <button id="flashBtn"   disabled>2) Flash UTAudio.bin</button>
      <button id="resetBtn"   disabled>3) Reset</button>
    </div>
    <p class="muted">If it doesn’t auto‑reboot, click <b>Reset</b> or press the board’s <b>RESET (EN)</b> button.</p>
  </div>

  <div class="panel">
    <h3>Log</h3>
    <textarea id="log" readonly></textarea>
  </div>

<script type="module">
  const logEl      = document.getElementById('log');
  const connectBtn = document.getElementById('connectBtn');
  const flashBtn   = document.getElementById('flashBtn');
  const resetBtn   = document.getElementById('resetBtn');

  let port = null;       // Web Serial port
  let transport = null;  // esptool-js Transport
  let loader = null;     // esptool-js ESPLoader
  const BAUD = 460800;

  const log = (m, isErr=false) => {
    const ts = new Date().toLocaleTimeString();
    logEl.value += `[${ts}] ${m}\n`;
    logEl.scrollTop = logEl.scrollHeight;
    (isErr ? console.error : console.log)(m);
  };

  // Catch ANY module-level or async errors
  window.addEventListener('error', e => log(`[window.onerror] ${e.message || e}`, true));
  window.addEventListener('unhandledrejection', e => log(`[unhandledrejection] ${e.reason || e}`, true));

  log("DEBUG: starting dynamic import…");

  let ESPLoader, Transport;
  try {
    // If CDN is blocked intermittently, you can switch this to a LOCAL bundle:
    // const esptool = await import('/BTAudio/assets/esptooljs/bundle.js');
    const esptool = await import('https://unpkg.com/esptool-js@0.5.6/bundle.js');
    ESPLoader = esptool.ESPLoader;
    Transport = esptool.Transport;
    log(`Import OK. Module exports: Transport=${!!Transport}, ESPLoader=${!!ESPLoader}`);
  } catch (e) {
    log(`ERROR: failed to import bundle module: ${e?.message || e}`, true);
    // If you have a local bundle, try it automatically:
    // try {
    //   const esptoolLocal = await import('/BTAudio/assets/esptooljs/bundle.js');
    //   ESPLoader = esptoolLocal.ESPLoader;
    //   Transport = esptoolLocal.Transport;
    //   log(`Local import OK. Module exports: Transport=${!!Transport}, ESPLoader=${!!ESPLoader}`);
    // } catch (e2) {
    //   log(`ERROR: local bundle import failed: ${e2?.message || e2}`, true);
    // }
  }

  if (!ESPLoader || !Transport) {
    log("FATAL: esptool-js not available; keeping buttons disabled.", true);
    // Stop here, so you can see the exact error in the log
  } else {
    connectBtn.disabled = false;
  }

  // Minimal terminal for esptool-js
  const espTerminal = { clean(){logEl.value=""}, writeLine(s){log(s)}, write(s){log(s)} };

  async function hardResetToApp(){
    if(!port) return;
    try{
      await port.setSignals({ dataTerminalReady: false }); // GPIO0 high
      await port.setSignals({ requestToSend: true  });      // EN low
      await new Promise(r => setTimeout(r, 120));
      await port.setSignals({ requestToSend: false });      // EN high
      log("Issued RTS/DTR reset (normal boot).");
    }catch(e){ log(`Reset sequence failed: ${e?.message || e}`, true); }
  }

  connectBtn.onclick = async () => {
    log("Connect clicked.");
    connectBtn.disabled = true;
    try{
      if(!('serial' in navigator)){
        throw new Error("WebSerial not available. Use Chrome/Edge over HTTPS.");
      }

      // Close lingering port if any
      if (port && (port.readable || port.writable)) { try { await port.close(); } catch {} }

      // User picks a port
      port = await navigator.serial.requestPort({});
      await port.open({ baudRate: BAUD });
      log(`Port opened @ ${BAUD} baud.`);

      // --- robust getInfo shim (in case library asks for it)
      const portShim = new Proxy(port, {
        get(target, prop, receiver) {
          if (prop === 'getInfo') return () => ({ usbVendorId: undefined, usbProductId: undefined });
          return Reflect.get(target, prop, receiver);
        }
      });

      transport = new Transport(portShim);
      loader    = new ESPLoader(transport, BAUD, espTerminal);

      await loader.connect();
      const chip = await loader.chip;
      log(`Connected to chip: ${chip}`);

      flashBtn.disabled = false;
      resetBtn.disabled = false;
    }catch(e){
      log(`Connect failed: ${e?.name ? e.name+': ' : ''}${e?.message || e}`, true);
      if (e?.name === 'InvalidStateError' || /already open/i.test(String(e))) { try { await port?.close(); } catch {} }
      connectBtn.disabled = false;
    }
  };

  flashBtn.onclick = async () => {
    log("Flash clicked.");
    flashBtn.disabled = true;
    try{
      const resp = await fetch("webflash/UTAudio.bin", { cache: "no-cache" });
      if(!resp.ok) throw new Error(`HTTP ${resp.status}`);
      const buf = new Uint8Array(await resp.arrayBuffer());
      log(`Image size: ${buf.length} bytes`);

      log("Erasing…");
      await loader.eraseFlash();

      log("Writing flash @ 0x000000 … (~30–90s for ~1MB images)");
      await loader.writeFlash(0x000000, buf);

      log("Flash complete. Wrapping up…");
      await hardResetToApp();
      log("Done.");
    }catch(e){ log(`Flash failed: ${e?.message || e}`, true); }
    finally{ flashBtn.disabled = false; }
  };

  resetBtn.onclick = async () => { log("Reset clicked."); await hardResetToApp(); };
</script>
</body>
</html>
