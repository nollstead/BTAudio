    :root{--bg:#121212;--panel:#1e1e1e;--text:#eaeaea;--muted:#bbb;--accent:#4CAF50;--accent2:#43a047;--border:rgba(255,255,255,.1)}
    *{box-sizing:border-box}
    body{font-family:ui-monospace,Menlo,Consolas,monospace;max-width:820px;margin:40px auto;padding:16px;background:var(--bg);color:var(--text);line-height:1.6}
    h1{margin:0 0 8px}.muted{color:var(--muted)}
    .panel{background:#1a1a1a;border:1px solid var(--border);border-radius:12px;padding:16px;margin:16px 0}
    .row{display:flex;gap:10px;flex-wrap:wrap;margin:12px 0}
